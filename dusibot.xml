<context>
    <input pattern="* {какие сегодня уроки [Дуся]} *">
       <output value="А какой сегодня день?"/>
    </input>
    <input pattern="[(какие уроки|а в)] * Понедельник *">
       <output value="4 урока: Английский язык. Чтение. Русский язык. Труд"/>
          <context modal="true">
              <input pattern="((Во сколько|когда) нач* [первый] урок*|на сколько в школу)">
                  <output>
                      <item value="В школу на 12:40"/>
                      <item value="Первый урок начинается в 12:50"/>
                  </output>
              </input>
              <input pattern="((Во сколько|когда|до скольки) [законч*] [последний] урок*|до скольки уроки)">
                  <output>
                      <item value="Четвертый урок закончится в 16:20"/>
                      <item value="Уроки закончатся в 16:20"/>
                  </output>
              </input>
          </context>
    </input>
    <input pattern="[(какие уроки|а в)] * Вторник *">
       <output value="5 уроков: Русский язык, Музыка, Математика, Информатика, Окружающий мир"/>
    </input>
    <input pattern="[(какие уроки|а в)] * Сред* *">
       <output value="5 уроков: Английский язык, Физкультура, Русский язык, Математика, Чтение"/>
    </input>
       
    
</context>
